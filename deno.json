{
  "tasks": {
    "watch": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run watcher.ts",
    "bundle": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run bundler.ts",
    "run": "deno run --unstable-kv --allow-read --allow-net --allow-env --allow-write main.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "nodeModulesDir": "auto"
}
