{
  "tasks": {
    "watch": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run watcher.ts",
    "bundle": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run bundler.ts",
    "run": "deno run --unstable-kv --allow-read=.env,.env.defaults,.env.example,./static/notes/,./yjs.sqlite,./yjs.sqlite-journal --allow-net --allow-env --allow-write=./static/notes/,./yjs.sqlite,./yjs.sqlite-journal main.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "esnext", "deno.ns"],
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "nodeModulesDir": "auto"
}
